mixin skills-and-services-screen__service-cards(modifier)
  if modifier["serviceCards"] == undefined
    - modifier["serviceCards"] = [];
  ul.skills-and-services-screen__service-cards&attributes(attributes)
    each serviceCard in modifier.serviceCards
      if serviceCard["modification"] == undefined
        - serviceCard["modification"] = "";
      li
        +service-card(serviceCard)(class=`skills-and-services-screen__service-card ${serviceCard.modification}`)